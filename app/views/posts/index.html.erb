<!-- Create the rest of your views in the posts folder -->

<h1>Posts</h1>
<ul>
	<% @posts.each do |post| %>
		<li><%= link_to post.bru_name, post_path(post) %> | 
		<%= link_to 'Edit', edit_post_path(post) %> | 
		<%= link_to 'Destroy', post_path(post),
		method: :delete,
		data: { confirm: 'Are you sure?' } %></li>  
	<% end %>
</ul>

<%= link_to 'New Post', new_post_path %>